<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'Forms Assignment'}); %>
  <body>
    <% include ../partials/navbar %>

    <div class="container">
      <h1>Create Bird</h1>

      <form method="POST" action="/birds/create">
        <div class="form-group col-md-5">
          <label for="species">Species:</label>
          <input
            type="text"
            name="species"
            class="form-control"
            id="species"
            placeholder="Species"
            required
          />
        </div>
        <div class="form-group col-md-5">
          <label for="nickname">Nickname:</label>
          <input
            type="text"
            name="nickname"
            class="form-control"
            id="nickname"
            placeholder="Nickname"
          />
        </div>
        <div class="form-group col-md-5">
          <label for="status">Status:</label>
          <input
            type="text"
            name="status"
            class="form-control"
            id="status"
            placeholder="Status"
            required
          />
        </div>
        <input type="submit" value="Create Bird" class="btn btn-primary" />
      </form>
    </div>

    <% include ../partials/scripts %>
  </body>
</html>
